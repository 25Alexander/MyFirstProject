<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="FileApp" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="List" FontSize="19" FontWeight="Medium" Margin="10" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="False" Header="DateOfCreate" Width="190"/>
                <DataGridCheckBoxColumn IsReadOnly="True" Header="Done" Width="100"/>
                <DataGridTextColumn IsReadOnly="True" Header="List" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
