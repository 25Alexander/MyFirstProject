        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="FileApp" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="List">
            <DataGrid.Columns>
                <DataGridTextColumn Header="DateOfCreate" Width="190"/>
                <DataGridCheckBoxColumn Header="Done" Width="100"/>
                <DataGridTextColumn Header="List" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
